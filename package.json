{
  "name": "novabulletin-backend",
  "version": "1.0.0",
  "description": "SystÃ¨me de gestion des bulletins scolaires pour Togo et Ghana",
  "main": "server.js",
  "type": "commonjs",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "cross-env NODE_ENV=test jest --detectOpenHandles --forceExit --verbose --maxWorkers=1",
    "test:watch": "cross-env NODE_ENV=test jest --watch --verbose --maxWorkers=1",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage --verbose --maxWorkers=1",
    "test:health": "cross-env NODE_ENV=test jest tests/health.test.js --detectOpenHandles --forceExit --verbose",
    "test:simple": "cross-env NODE_ENV=test jest tests/simple.test.js --detectOpenHandles --forceExit --verbose",
    "test:auth": "cross-env NODE_ENV=test jest tests/auth.test.js --detectOpenHandles --forceExit --verbose --maxWorkers=1",
    "test:grades": "cross-env NODE_ENV=test jest tests/grades.test.js --detectOpenHandles --forceExit --verbose --maxWorkers=1",
    "test:payments": "cross-env NODE_ENV=test jest tests/payment.test.js --detectOpenHandles --forceExit --verbose --maxWorkers=1",
    "test:students": "cross-env NODE_ENV=test jest tests/students.test.js --detectOpenHandles --forceExit --verbose --maxWorkers=1",
    "test:bulletins": "cross-env NODE_ENV=test jest tests/bulletin.test.js --detectOpenHandles --forceExit --verbose --maxWorkers=1",
    "test:statistics": "cross-env NODE_ENV=test jest tests/statistics.test.js --detectOpenHandles --forceExit --verbose --maxWorkers=1",
    "test:integration": "cross-env NODE_ENV=test jest tests/integration.test.js --detectOpenHandles --forceExit --verbose --maxWorkers=1",
    "test:dashboard": "cross-env NODE_ENV=test jest tests/dashboard.test.js --detectOpenHandles --forceExit --verbose --maxWorkers=1",
    "test:dashboard-simple": "cross-env NODE_ENV=test jest tests/dashboard-simple.test.js --detectOpenHandles --forceExit --verbose --maxWorkers=1",
    "test:minimal-grades": "cross-env NODE_ENV=test jest tests/minimal-grades.test.js --detectOpenHandles --forceExit --verbose --maxWorkers=1",
    "test:debug": "cross-env NODE_ENV=test jest --detectOpenHandles --forceExit --verbose --logHeapUsage --runInBand",
    "test:sequential": "cross-env NODE_ENV=test jest --detectOpenHandles --forceExit --verbose --runInBand",
    "test:quick": "cross-env NODE_ENV=test jest --testTimeout=10000 --detectOpenHandles --forceExit --verbose --maxWorkers=1",
    "test:no-exit": "cross-env NODE_ENV=test jest --detectOpenHandles --verbose --maxWorkers=1",
    "test:all-individual": "cross-env NODE_ENV=test jest tests/*.test.js --detectOpenHandles --forceExit --verbose --maxWorkers=1",
    "db:seed": "node scripts/seedDatabase.js",
    "db:reset": "node scripts/resetDatabase.js",
    "db:seed:test": "cross-env NODE_ENV=test node scripts/seedDatabase.js",
    "clean": "rm -rf node_modules && pnpm install",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix"
  },
  "dependencies": {
    "@google-cloud/storage": "^7.17.3",
    "axios": "^1.13.2",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.40.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "helmet": "^7.0.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "multer": "1.4.5-lts.1",
    "nodemailer": "^6.9.4",
    "pdfkit": "^0.14.0",
    "util": "^0.12.4"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "eslint": "^8.48.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.28.1",
    "express-async-handler": "^1.2.0",
    "jest": "^29.7.0",
    "jest-extended": "^7.0.0",
    "jest-html-reporters": "^3.1.7",
    "jest-junit": "^16.0.0",
    "mongodb-memory-server": "^8.15.1",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "keywords": [
    "education",
    "bulletin",
    "togo",
    "ghana",
    "school",
    "grades",
    "students",
    "teachers",
    "management"
  ],
